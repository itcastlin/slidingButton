<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:heima="http://schemas.android.com/apk/res/org.heima.slidingbutton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.heima.slidingbutton.MainActivity" >

    <org.heima.slidingbutton.view.SlidingButton
        android:id="@+id/slidingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        heima:ss_bg="@drawable/slide_switch_background"
        heima:ss_btn_bg="@drawable/slide_button_background" 
        heima:ss_checked="false"
        />

</RelativeLayout>